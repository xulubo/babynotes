<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

		<LinearLayout 
		android:orientation="horizontal"	
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0">
			<TextView android:id="@+id/hints"
				android:layout_width="0dip" 
				android:layout_height="fill_parent"
				android:text="@string/week_7"
				android:layout_weight="1"/>
			
			<Button android:id="@+id/more_info"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:text="展开" 
				android:layout_weight="0"/>
			
	</LinearLayout>
	
	<LinearLayout 
		android:orientation="vertical"	
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		    android:background="@drawable/textfield_default"
		
		android:layout_weight="0">
<view xmlns:android="http://schemas.android.com/apk/res/android"
    class="cn.year11.babynote.app.NoteEditor$LinedEditText"
    android:id="@+id/note"
    android:layout_width="fill_parent"
    android:layout_height="100dip"
    android:padding="5dip"
    android:scrollbars="vertical"
    android:fadingEdge="vertical"
    android:gravity="top"
    android:textSize="22sp"
    android:capitalize="sentences"
    android:layout_weight="0"
    android:background="@android:color/transparent"
    
/>
	<LinearLayout
		android:id="@+id/image_container"
		android:orientation="horizontal"	
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0">
	</LinearLayout>
	</LinearLayout>
	

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"	
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1">
	</LinearLayout>
		<LinearLayout 
		android:orientation="horizontal"	
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0">
			<ImageButton android:id="@+id/capture_image"
				android:layout_width="0.0dip" 
				android:layout_height="fill_parent"
				android:src="@drawable/post_attach_camera"
				android:layout_weight="1.0"
				style="\@style/BottomActionBar.ActionButton"/>
			
			<ImageButton android:id="@+id/record_voice"
				android:layout_width="0.0dip" 
				android:layout_height="fill_parent"
				android:src="@drawable/post_attach_voice" 
				android:layout_weight="1.0"
				style="\@style/BottomActionBar.ActionButton"/>
	</LinearLayout>
</LinearLayout>