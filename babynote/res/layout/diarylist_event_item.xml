<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/day_right_outer_container" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_weight="1.0"
	android:orientation="vertical" android:clickable="true"
	android:focusable="true" android:descendantFocusability="blocksDescendants"
	android:paddingTop="4.0dip">

	<ImageView android:id="@id/note_divider"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:paddingBottom="8.0dip" android:src="@drawable/divider"
		android:visibility="gone" />

	<LinearLayout android:id="@id/day_right_inner_container"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="horizontal">

		<LinearLayout android:id="@id/day_item_right_column"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:layout_weight="1.0" android:gravity="center_vertical"
			android:minHeight="42.0dip" android:orientation="vertical">

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:id="@id/time_label" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:paddingBottom="5.0dip"
					android:textColor="@color/mid_blue" android:textSize="12.0dip"
					android:typeface="sans" />
				<ImageView android:id="@+id/sync_flag"
					android:layout_width="10dip" android:layout_height="10dip"
					android:layout_gravity="center"
					android:src="@drawable/sync"
					android:visibility="gone" />
			</LinearLayout>
			<TextView android:id="@id/note_snippet"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@android:color/black" android:autoLink="all"
				android:textSize="15.0dip" />

			<LinearLayout android:id="@+id/att_container"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal" />

		</LinearLayout>

		<FrameLayout android:layout_width="wrap_content"
			android:layout_height="fill_parent" android:layout_weight="0.0"
			android:paddingLeft="8.0dip" android:paddingRight="8.0dip">

			<ImageView android:layout_width="wrap_content"
				android:layout_height="fill_parent" android:gravity="center_vertical"
				android:src="@drawable/arti_button_chevron_blue" />
		</FrameLayout>
	</LinearLayout>

</LinearLayout>