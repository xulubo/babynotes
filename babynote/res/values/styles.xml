<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="HomeScreenGridView" parent="@android:style/Widget.GridView">
        <item name="android:numColumns">2</item>
    </style>

    <style name="HomeScreenIcon">
        <item name="android:textSize">15dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="GalleryIcon">
        <item name="android:textSize">12dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="Text">
        <item name="android:textSize">10dip</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="Text.Time">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#FF454545</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.Status">
        <item name="android:textSize">10dip</item>
        <item name="android:textColor">#FF454545</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.User">
        <item name="android:textSize">10dip</item>
        <item name="android:textColor">#FF454545</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.Message">
        <item name="android:textSize">14dip</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">false</item>
    </style>
    
    <style name="Text.Header">
        <item name="android:textSize">18dip</item>
        <item name="android:textColor">#FFF5F5F5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.ToolBar">
        <item name="android:textSize">17dip</item>
        <item name="android:textColor">#FFA5A5A5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.InputBar">
        <item name="android:textSize">17dip</item>
        <item name="android:textColor">#FF858585</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.PaintButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#FF222222</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#FFDDDDDD</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.PaintTitle">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Text.PaintText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Dialog"></style>
    
    <style name="Theme.SimpleDialog" parent="@android:style/Theme.Dialog">
    	<item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
	<style name="Theme.NoFrameDialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="Dialog.ImageLayout">
		<item name="android:layout_gravity">center_horizontal|center_vertical</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:layout_marginLeft">0dip</item>
		<item name="android:layout_marginRight">0dip</item>
		<item name="android:layout_marginTop">0dip</item>
		<item name="android:layout_marginBottom">0dip</item>
    </style>
    
	<style name="Dialog.ImageView">
		<item name="android:layout_gravity">center_horizontal|center_vertical</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
		<item name="android:background">@android:color/white</item>
		<item name="android:paddingLeft">0dip</item>
		<item name="android:paddingRight">0dip</item>
		<item name="android:paddingTop">0dip</item>
		<item name="android:paddingBottom">0dip</item>
    </style>

</resources>